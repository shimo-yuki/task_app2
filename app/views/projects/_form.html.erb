<div class="row">
  <div class="col-lg-12">
    <%= form_for(project) do |f| %>
    <% if project.errors.any? %>
        <div class="alert-danger", id="error_explanation">
          <ul>
            <% project.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      <div class="form_group">
        <div class="field">
          <%= f.label :name %>
          <%= f.text_field :name, class:"col-lg-12 form-control"%>
        </div>
      </div>
      <div class="form_group">
        <div class="field">
          <%= f.label :description %>
          <%= f.text_area :description, class:"col-lg-12 form-control" %>
        </div>
      </div>
      <%= f.submit'登録する', class: "btn btn-success mt-2" %>
    <% end %>
  </div>
</div>
